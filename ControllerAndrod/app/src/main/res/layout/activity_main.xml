<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mrtrizer.controllerandroid.MainActivity">

    <Button
        android:text="Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_stop" />

    <Button
        android:text="Forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_stop"
        android:layout_alignLeft="@+id/button_stop"
        android:layout_alignStart="@+id/button_stop"
        android:layout_marginBottom="14dp"
        android:id="@+id/button_forward" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_forward"
        android:layout_toLeftOf="@+id/button_forward"
        android:layout_toStartOf="@+id/button_forward"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/button_forward_left"
        android:text="FWDL" />

    <Button
        android:text="Left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_forward"
        android:layout_alignRight="@+id/button_forward_left"
        android:layout_alignEnd="@+id/button_forward_left"
        android:id="@+id/button_left" />

    <Button
        android:text="FwdR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_forward"
        android:layout_toRightOf="@+id/button_forward"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:id="@+id/button_forward_right"
        android:enabled="true" />

    <Button
        android:text="Right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_forward"
        android:layout_alignLeft="@+id/button_forward_right"
        android:layout_alignStart="@+id/button_forward_right"
        android:id="@+id/button_right" />

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_stop"
        android:layout_alignLeft="@+id/button_stop"
        android:layout_alignStart="@+id/button_stop"
        android:layout_marginTop="15dp"
        android:id="@+id/button_back" />

    <Button
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button_stop"
        android:layout_alignEnd="@+id/button_stop"
        android:layout_marginTop="25dp"
        android:id="@+id/button_connect" />
</RelativeLayout>
